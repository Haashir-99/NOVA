    <script>
        let currentSection = 0;
        const sections = document.querySelectorAll('.section');
        const totalSections = sections.length;
        const container = document.querySelector('.container'); // Get the container inside main
        let isScrolling = false; // To control transition timing
        const carouselContainer2 = document.querySelector('.images-container-wrapper');
        const scrollDownButton = document.querySelector('.scrollDown');
        const scrollUpButton = document.querySelector('.scrollUp');
        const mainFooter = document.querySelector('.main-footer');
        let startY = 0; // To track touch start position
    
        // Scroll event listener for mouse wheel
        window.addEventListener('wheel', (event) => {
            if (isScrolling || carouselContainer2.matches(':hover')) return; // Prevent scrolling while in transition
            isScrolling = true;
    
            if (event.deltaY > 0) {
                // Scroll down
                if (currentSection < totalSections - 1) {
                    currentSection++;
                }
            } else {
                // Scroll up
                if (currentSection > 0) {
                    currentSection--;
                }
            }
    
            scrollToSection(currentSection);
            updateScrollButtons(currentSection);
    
            // Allow scrolling after transition ends
            setTimeout(() => {
                isScrolling = false;
            }, 700); // Time matches CSS transition duration
        });
    
        // Touch event listeners
        window.addEventListener('touchstart', (event) => {
            startY = event.touches[0].clientY; // Get the starting Y position
        });
    
        window.addEventListener('touchmove', (event) => {
            if (isScrolling || carouselContainer2.matches(':hover')) return; // Prevent scrolling while in transition
    
            const touchY = event.touches[0].clientY; // Get the current Y position
            const diffY = startY - touchY; // Calculate the difference
    
            if (Math.abs(diffY) > 50) { // Adjust this threshold if necessary
                isScrolling = true;
    
                if (diffY > 0) {
                    // Scroll down
                    if (currentSection < totalSections - 1) {
                        currentSection++;
                    }
                } else {
                    // Scroll up
                    if (currentSection > 0) {
                        currentSection--;
                    }
                }
    
                scrollToSection(currentSection);
                updateScrollButtons(currentSection);
    
                // Allow scrolling after transition ends
                setTimeout(() => {
                    isScrolling = false;
                }, 700); // Time matches CSS transition duration
            }
        });
    
        scrollDownButton.addEventListener('click', () => {
            if (currentSection < totalSections - 1) {
                currentSection++;
            }
            scrollToSection(currentSection);
            updateScrollButtons(currentSection);
        });
        
        scrollUpButton.addEventListener('click', () => {
            if (currentSection > 0) {
                currentSection--;
            }
            scrollToSection(currentSection);
            updateScrollButtons(currentSection);
        });
    
        document.addEventListener("DOMContentLoaded", () => {
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    // When the section is in view, add the class for animation
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in-view');
                    } else {
                        // When the section is out of view, remove the class
                        entry.target.classList.remove('in-view');
                    }
                });
            }, {
                threshold: 0.1 // Adjust this threshold value if needed
            });
    
            // Observe each section
            sections.forEach(section => {
                observer.observe(section);
            });
        });
    
        function updateScrollButtons(section) {
            if (section === 0) {
                scrollDownButton.style.opacity = 1;
                scrollUpButton.style.opacity = 0;
                mainFooter.style.opacity = 0;
                mainFooter.style.zIndex = -1;
                mainFooter.classList.remove('visible');
            } else if (section === 1) {
                scrollDownButton.style.opacity = 1;
                scrollUpButton.style.opacity = 1;
                mainFooter.style.zIndex = -1;
                mainFooter.style.opacity = 0;
                mainFooter.classList.remove('visible');
            } else if (section === 2) {
                scrollDownButton.style.opacity = 0;
                scrollUpButton.style.opacity = 1;
                mainFooter.style.zIndex = 1;
                mainFooter.style.opacity = 1;
                mainFooter.classList.add('visible');
            }
        }
    
        // Smooth scrolling function
        function scrollToSection(sectionIndex) {
            const offset = sectionIndex * 80; // Scroll by 80vh since main section height is 80vh
            container.style.transform = `translateY(-${offset}vh)`; // Apply smooth scroll transform
        }
    </script>
    <script>
        let currentIndex = 0;
        const images = document.querySelectorAll('.image');
        const totalImages = images.length;
        const carouselContainer = document.querySelector('.images-container-wrapper'); // Carousel container

        function rotateCarousel() {
            images.forEach((image, index) => {
                const rotateIndex = (index - currentIndex + totalImages) % totalImages;

                // Front-most image 
                if (rotateIndex === 0) {
                    image.style.transform = "translateZ(100px) translateX(0px)";
                    image.style.opacity = 1;
                    image.onclick = null;
                }
                // Left images with partial opacity
                else if (rotateIndex === 1) {
                    image.style.transform = "translateZ(20px) translateX(-300px)";
                    image.style.opacity = 0.4;
                    image.onclick = () => {
                        currentIndex = (currentIndex - 1 + totalImages) % totalImages;
                        rotateCarousel();
                    };
                }
                else if (rotateIndex === 2) {
                    image.style.transform = "translateZ(-500px) translateX(-600px)";
                    image.style.opacity = 0;
                    image.onclick = null;
                }
                else if (rotateIndex === 3) {
                    image.style.transform = "translateZ(-500px) translateX(600px)";
                    image.style.opacity = 0;
                    image.onclick = null;
                }
                // Right images with partial opacity
                else if (rotateIndex === 4) {
                    image.style.transform = "translateZ(20px) translateX(300px)";
                    image.style.opacity = 0.4;
                    image.onclick = () => {
                        currentIndex = (currentIndex + 1) % totalImages;
                        rotateCarousel();
                    };
                }
            });
        }

        // Add the wheel event listener to the carousel container only
        carouselContainer.addEventListener('wheel', (event) => {
            event.preventDefault(); // Prevents default scroll behavior

            // Handle scrolling up and down for carousel movement
            if (event.deltaY > 0) {
                currentIndex = (currentIndex + 1) % totalImages;
            } else {
                currentIndex = (currentIndex - 1 + totalImages) % totalImages;
            }

            rotateCarousel(); // Call the function to update positions and opacity
        });

        // Initial call to set up the carousel
        rotateCarousel();

    </script>
